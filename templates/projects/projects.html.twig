{% extends 'base.html.twig' %}

{% block title %}Projects LÃ´-Ba{% endblock %}

{% block main %}

    <div class="sectionProjOne">
        <section class="proj-intro">
            <h1>OUR PROJECTS</h1>
            <section class="sec-pictos">
                {% for project in projects %}
                    <a href="#">
                        <img src="{{ asset('uploads/images/' ~ project.icon) }}" alt="">
                    </a>
                {% endfor %}
            </section>
        </section>

        {% if locale == 'default' %}
            {% for project in projects %}
                <section class="sec-sante">
                    <a id="sante-title"><h2>{{ project.title }}</h2></a>
                    <div class="content">{{ project.content|raw }}</div>
                </section>
            {% endfor %}
        {% else %}
            {% for p in ps %}
            {% for project in p %}
                <section class="sec-sante">
                    <a id="sante-title"><h2>{{ project['project.title'] }}</h2></a>
                    <div class="content">{{ project['project.content']|raw }}</div>
                </section>
            {% endfor %}
            {% endfor %}
        {% endif %}
    </div>

{% endblock %}
