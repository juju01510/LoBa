{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div id="container-form">
        <div class="main-form">
            <div class="login-section">
                <div class="formbox login">
                    <form method="post">

                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        {% if app.user %}
                            <div class="mb-3">
                                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                            </div>
                        {% endif %}

                        <h2>Connexion</h2>

                        <div class="input-box">
                            <span class="icon">
                                <i class='bx bxs-envelope'></i>
                            </span>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
                                   class="form-control" autocomplete="email" required autofocus>
                            <label for="inputEmail">Email</label>
                        </div>

                        <div class="input-box">
                            <span class="icon">
                                <i class='bx bxs-lock-alt'></i>
                            </span>
                            <input type="password" name="password" id="inputPassword" autocomplete="current-password"
                                   required>
                            <label for="inputPassword">Mot de passe</label>
                        </div>
                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}"
                        >

                        {#                        <div class="rem-password"> #}
                        {#                            <label for=""><input type="checkbox">Se souvenir de moi</label> #}
                        {#                            <a href="#">Mot de passe oublié</a> #}
                        {#                        </div> #}

                        <button class="btn-val" type="submit">Validez</button>

                        <div class="crea-account">
                            <p>Création d'un compte ? <a href="#" class="register-link"> Inscription</a></p>
                        </div>
                    </form>
                </div>

                <div class="formbox register">
                    <form action="">
                        <h2>Inscription</h2>

                        <div class="input-box">
                                            <span class="icon">
                                                <i class='bx bxs-envelope'></i>
                                            </span>
                            <input type="email" required>
                            <label for="email">Email</label>
                        </div>

                        <div class="input-box">
                                            <span class="icon">
                                                <i class='bx bxs-lock-alt'></i>
                                            </span>
                            <input type="password" required>
                            <label for="password">Mot de passe</label>
                        </div>

                        <div class="input-box">
                                            <span class="icon">
                                                <i class='bx bxs-lock-alt'></i>
                                            </span>
                            <input type="password" required>
                            <label for="password">Confirmez votre mot de passe</label>
                        </div>

                        <button class="btn-val">Validez</button>

                        <div class="crea-account">
                            <p>Vous avez déjà un compte ? <a href="#" class="login-link"> Connexion</a></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
