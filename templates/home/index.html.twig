{% block main %}
    <div style="background-image: url('{{ asset('uploads/images/' ~ intro.background) }}')" class="sectionOne">

        <section class="sec-intro">.

            {% for message in app.flashes('message') %}
                <div>
                    {{ message }}
                </div>
            {% endfor %}

            <div class="intro">
                {{ intro.content|raw }}
            </div>
        </section>

        {% for section in sections %}
            <section class="sec-mission">
                <h2 class="mission-title">{{ section.title }}</h2>
                <div class="mission-txt">
                    {{ section.content|raw }}
                </div>
            </section>
        {% endfor %}
    </div>
    <style>
        .sec-mission:nth-child(2n+3) {
            background-image: url('{{ asset('uploads/images/' ~ intro.background) }}');
        }
    </style>
{% endblock %}